generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                          String      @id @unique @default(uuid()) @db.Uuid
  createdAt                   DateTime    @default(now()) @db.Timestamp(6)
  updatedAt                   DateTime    @updatedAt @db.Timestamp(6)
  email                       String?     @unique @db.VarChar(128)
  corporateReason             String?     @unique @db.VarChar(128)
  fantasyName                 String?     @unique @db.VarChar(128)
  cnpj                        String      @unique
  stateRegistration           String? 
  municipalRegistration       String? 
  taxationRegime              String?
  operatingLicense            String?
  licenseValidity             DateTime?
  openingDate                 DateTime?
  blocked                     Boolean      @default(false)
  status                      Boolean      @default(true)
  cnae                        String?
  fiscalResponsibleName       String?
  fiscalResponsibleCpf        String? 
  hasDigitalCertificate       Boolean?
  validatedDigitalCertificate DateTime?
  regularizationProcessNumber String?
  fiscalObservations          String?
  createdBy                   String?
  
  @@index([cnpj, email])
  @@map("Companies")
}
